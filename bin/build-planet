#!/bin/bash

set -x

SCRIPT_DIR=$( cd -- "$( dirname -- "${BASH_SOURCE[0]}" )" &> /dev/null && pwd )

bin_name=$(basename $0)
log_filename="${bin_name}-$(date +%Y-%m-%d-%H:%M:%S).log"
log_dir=/pool1/logs
log_file="${log_dir}/${log_filename}"

EARTHLY_ARGS=${@:1}

if [ -z "$HEADWAY_CONTAINER_TAG" ]
then
source ${SCRIPT_DIR}/_headway_version.sh
fi

# This job assumes you've already downloaded the planet file into the repository root
AREA=maps-earth-planet-v1.21

CMD="earthly $EARTHLY_ARGS -P +build --area=$AREA --countries=ALL --tag=$HEADWAY_CONTAINER_TAG"
$CMD > >(tee "${log_file}.out") 2> >(tee "${log_file}.err")

TRANSIT_FEEDS=data/Seattle-2023-01-04.gtfs_feeds.csv
TRANSIT_AREA=Seattle
CMD="earthly ${EARTHLY_ARGS} -P +save-gtfs --area=${TRANSIT_AREA} --tag=${HEADWAY_CONTAINER_TAG} --transit_feeds=${TRANSIT_FEEDS}"
CMD="earthly ${EARTHLY_ARGS} -P +save-otp --area=${TRANSIT_AREA} --tag=${HEADWAY_CONTAINER_TAG} --transit_feeds=${TRANSIT_FEEDS}"
$CMD > >(tee "${log_file}.out") 2> >(tee "${log_file}.err")

TRANSIT_FEEDS=data/LosAngeles-2023-01-21.gtfs_feeds.csv
TRANSIT_AREA=LosAngeles
CMD="earthly ${EARTHLY_ARGS} -P +save-gtfs --area=${TRANSIT_AREA} --tag=${HEADWAY_CONTAINER_TAG} --transit_feeds=${TRANSIT_FEEDS}"
CMD="earthly ${EARTHLY_ARGS} -P +save-otp --area=${TRANSIT_AREA} --tag=${HEADWAY_CONTAINER_TAG} --transit_feeds=${TRANSIT_FEEDS}"
$CMD > >(tee "${log_file}.out") 2> >(tee "${log_file}.err")
