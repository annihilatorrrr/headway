#!/bin/bash

set -xe
set -o nounset

APP_ROOT=$(git rev-parse --show-toplevel)
cd "$APP_ROOT"

EARTHLY_ARGS=${@:1}

# This job assumes you've already downloaded the planet file into the repository root
CONFIG_DIR="builds/planet"

source "${CONFIG_DIR}/env.sh"
TRANSIT_ZONES=$(ls ${CONFIG_DIR}/gtfs/*)

earthly ${EARTHLY_ARGS} +save-transit-zones --area="$HEADWAY_AREA" --transit_zones="$TRANSIT_ZONES"
